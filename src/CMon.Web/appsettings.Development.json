{
	"Serilog": {
		"MinimumLevel": {
			"Default": "Debug",
			"Override": {
				"System": "Information",
				"Microsoft": "Information"
			}
		},
		"WriteTo": [
			{ "Name": "LiterateConsole" },
			// { "Name": "Async" }, // XML and JSON configuration support has not yet been added for this wrapper.
			{
				"Name": "RollingFile",
				"Args": {
					"pathFormat": "../../../.logs/cmon.web-{Date}.log",
					"outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} {Level:u4} [{ThreadId}] {SourceContext:l} - {Message}{NewLine}{Exception}"
				}
			}
		],
		"Enrich": [ "FromLogContext", "WithThreadId" ],
		"Properties": {
			"Application": "CMon.Web"
		}
	}
}
