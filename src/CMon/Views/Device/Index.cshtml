@model CMon.ViewModels.Device.DeviceViewModel

@{
	ViewData["Title"] = "#" + Model.Id;
}

@section navbar {
	<ul class="nav navbar-nav navbar-right">
		<li>
			<a href="#" class="dropdown-toggle" data-toggle="collapse" data-target="#time-range" role="button" aria-haspopup="true" aria-expanded="false">
				<i class="fa fa-clock-o" aria-hidden="true"></i>&nbsp; <span id="selected-range-name">Last 1 hour</span> <span class="caret"></span>
			</a>
		</li>
	</ul>
}

<div id="time-range" class="row collapse">
	<div class="col-md-12">
		@foreach (var column in Model.QuickRanges)
		{
			<ul class="pull-right">
				@foreach (var range in column)
				{
					<li><a href="#from=@range.From&to=@range.To" data-from="@range.From" data-to="@range.To">@range.Name</a></li>
				}
			</ul>
		}
		<form class="form-horizontal pull-right">
			<div class="form-group">
				<label for="from" class="col-sm-5 control-label">From</label>
				<div class="col-sm-7">
					<input type="text" class="form-control" id="from" value="now-1h" />
				</div>
			</div>
			<div class="form-group">
				<label for="to" class="col-sm-5 control-label">To</label>
				<div class="col-sm-7">
					<input type="text" class="form-control" id="to" value="now" />
				</div>
			</div>
			<div class="form-group">
				<label for="refresh-interval" class="col-sm-5 control-label">Refresh every</label>
				<div class="col-sm-7">
					<select class="form-control" id="refresh-interval">
						<option>Off</option>
						<option>15 seconds</option>
						<option>30 seconds</option>
						<option>1 minute</option>
					</select>
				</div>
			</div>
		</form>
	</div>
</div>

