@model CMon.ViewModels.Device.DeviceListViewModel

<ul class="device-list list-group">
	@foreach (var item in Model.Items)
	{
		<li class="list-group-item">
			<h4 class="list-group-item-heading">@item.Name</h4>
			<p class="list-group-item-text">@item.Imei</p>

			<button type="button" class="btn btn-default" data-device-id="@item.Id">Обновить</button>
			<a href="@Url.Action("Index", "Device", new { id = item.Id })">Просмотр</a>
		</li>
	}
</ul>
