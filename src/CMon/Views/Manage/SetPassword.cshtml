@model CMon.ViewModels.Manage.SetPasswordViewModel
@{
	ViewData["Title"] = "Set Password";
}

<div class="modal-content modal-md center-block">
	<div class="modal-header">
		<h4 class="modal-title">@ViewData["Title"]</h4>
	</div>

	<div class="modal-body">
		
		<div class="alert alert-info">
			You do not have a local username/password for this site. Add a local
			account so you can log in without an external login.
		</div>

		<form asp-controller="Manage" asp-action="SetPassword" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="form-horizontal">
			<p>Set your password</p>

			<div asp-validation-summary="All" class="text-danger"></div>
			<div class="form-group">
				<label asp-for="NewPassword" class="col-md-3 control-label"></label>
				<div class="col-md-7">
					<input asp-for="NewPassword" class="form-control"/>
					<span asp-validation-for="NewPassword" class="text-danger"></span>
				</div>
			</div>
			<div class="form-group">
				<label asp-for="ConfirmPassword" class="col-md-3 control-label"></label>
				<div class="col-md-7">
					<input asp-for="ConfirmPassword" class="form-control"/>
					<span asp-validation-for="ConfirmPassword" class="text-danger"></span>
				</div>
			</div>
			<div class="form-group">
				<div class="col-md-offset-3 col-md-7">
					<button type="submit" class="btn btn-default">Set password</button>
				</div>
			</div>
		</form>

	</div>
</div>

@section Scripts {
	@{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
