@{
	var appName = "c°mon";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<meta name="google-site-verification" content="uTtk4l8cK8HfssECFR_daQ4TF_-PMiFVMCUPGlnelOE" />
	<meta name="yandex-verification" content="12835df1d1494c86" />
    <title>@ViewData["Title"] | @appName</title>
    <link rel="icon" type="image/x-icon" href="~/favicon.png">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/chart.css" />
</head>
<body>
    <div class="navbar navbar-default navbar-static-top">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
	            <a asp-area="" asp-controller="Home" asp-action="Index" class="navbar-brand">@appName</a>
            </div>
            <div class="navbar-collapse collapse">
	            <ul class="nav navbar-nav">
					<li class="dropdown">
						<a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Контроллеры <span class="caret"></span></a>
						<ul class="dropdown-menu">
							<li><a href="@Url.Action("Index", "Device", new { deviceId = 1 })">#1</a></li>
							<li><a href="@Url.Action("Index", "Device", new { deviceId = 2 })">#2</a></li>
						</ul>
					</li>
	            </ul>
            </div>
        </div>
    </div>
    <div class="container-fluid body-content">
        @RenderBody()
        <hr />
        <footer>
	        <p>&copy; @DateTime.Today.Year</p>
        </footer>
    </div>

    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>

	@RenderSection("scripts", required: false)
	
	@await Html.PartialAsync("_GoogleAnalytics")
	@await Html.PartialAsync("_YandexMetrika")
</body>
</html>
