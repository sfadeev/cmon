@using CMon.Services
@using Microsoft.AspNetCore.Mvc.Localization

@inject IDeviceRepository DeviceRepository
@inject IViewLocalizer Localizer

<ul class="nav navbar-nav">
	<li class="dropdown">
		<a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
			@Localizer["Controllers"] <span class="caret"></span>
		</a>
		<ul class="dropdown-menu">
			@foreach (var device in DeviceRepository.GetDevices())
			{
				<li><a href="@Url.Action("Index", "Device", new { id = device.Id })">#@device.Id</a></li>
			}
			<li role="separator" class="divider"></li>
			<li><a href="@Url.Action("List", "Device")">List</a></li>
		</ul>
	</li>
</ul>